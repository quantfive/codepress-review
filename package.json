{
  "name": "CodePress Review",
  "version": "3.1.0",
  "description": "Turnkey AI code review system for GitHub Pull Requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build dist/src/index.js -o dist --license licenses.txt --no-source-map-register && sed -i.bak 's/import\\.meta/({url: __filename})/g' dist/index.js && rm -f dist/index.js.bak",
    "package": "pnpm run build",
    "review": "ts-node src/ai-review.ts",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test jest",
    "prepare": "husky",
    "check-dist": "pnpm run build && git diff --exit-code dist/",
    "local:review": "tsx src/local-review.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/cohere": "^1.2.10",
    "@ai-sdk/deepseek": "^1.0.0",
    "@ai-sdk/fireworks": "^1.0.0",
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/groq": "^1.2.9",
    "@ai-sdk/mistral": "^1.2.8",
    "@ai-sdk/openai": "^1.3.24",
    "@ai-sdk/perplexity": "^2.0.0",
    "@ai-sdk/xai": "^1.2.18",
    "@octokit/rest": "^22.0.0",
    "@openai/agents": "^0.0.17",
    "@openai/agents-extensions": "^0.0.17",
    "@vscode/ripgrep": "^1.15.14",
    "ai": "^4.3.19",
    "diff": "^8.0.2",
    "ignore": "^7.0.5",
    "zod": "^3.25.63"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/diff": "^8.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
