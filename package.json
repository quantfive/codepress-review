{
  "name": "CodePress Review",
  "version": "0.0.1",
  "description": "Turnkey AI code review system for GitHub Pull Requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build dist/src/index.js -o dist --license licenses.txt --no-source-map-register && sed -i.bak 's/import\\.meta/({url: __filename})/g' dist/index.js && rm -f dist/index.js.bak",
    "package": "npm run build",
    "review": "ts-node src/ai-review.ts",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "prepare": "husky",
    "check-dist": "npm run build && git diff --exit-code dist/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.19",
    "@ai-sdk/openai": "^1.3.22",
    "@octokit/rest": "^22.0.0",
    "@openai/agents": "^0.0.7",
    "@openai/agents-extensions": "^0.0.7",
    "ai": "^4.3.16",
    "dependency-cruiser": "^16.10.2",
    "diff": "^8.0.2",
    "ignore": "^7.0.5",
    "zod": "^3.25.63"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/diff": "^8.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
